<%= form_for [@event, subscription] do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

    <% unless user_signed_in? %>
        <div class="form-group mb-3">
          <div class="input-group">
            <div class="input-group-text">
              <i class="fa fa-address-book"></i>
            </div>
            <%= f.text_field :user_name, class: 'form-control', placeholder: true %>
          </div>
        </div>

        <div class="form-group mb-3">
          <div class="input-group">
            <div class="input-group-text">
              <i class="fa fa-envelope"></i>
            </div>
            <%= f.text_field :user_email, class: 'form-control', placeholder: true %>
          </div>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.subscribe'), class: 'btn btn-primary' %>
    </div>
<% end %>
