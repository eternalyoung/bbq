<h2><%= t('.sign_up')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-envelope"></i>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-key"></i>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-key"></i>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: true  %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
  </div>
<% end %>

<p class="buffer-top">
  <%= render "devise/shared/links" %>
</p>
