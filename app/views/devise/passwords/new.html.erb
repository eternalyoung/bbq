<h2> <%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-key fa-lg"></i>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary'  %>
  </div>
<% end %>

<p class="buffer-top">
  <%= render "devise/shared/links" %>
</p>
