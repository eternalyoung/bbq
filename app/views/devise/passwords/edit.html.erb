<h2><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-key fa-lg"></i>
      </div>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-key fa-lg"></i>
      </div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
  </div>
<% end %>

<p class="buffer-top">
<%= render "devise/shared/links" %>
</p>
