<%= form_for @user, html: {multipart: true} do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @user} %>

  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-address-book"></i>
      </div>
      <%= f.text_field :name, class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-envelope"></i>
      </div>
      <%= f.text_field :email, class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= f.label :avatar %>
    <p><%= image_tag(user_avatar_thumb(@user)) if @user.avatar.attached? %></p>
    <%= f.file_field :avatar, input_html: { accept: ('image') }, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit t('.save'), class: 'btn btn-primary' %>
    <%= t('.or') %> <%= link_to t('.back'), :back %>
  </div>
<% end %>
