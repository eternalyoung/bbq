<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-header fa-lg"></i>
      </div>
      <%= f.text_field :title, class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-map fa-lg"></i>
      </div>
      <%= f.text_field :address, class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="form-group">      
      <p><i class="fa fa-calendar fa-lg"></i> <%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">
        <i class="fa fa-align-justify fa-lg"></i>
      </div>
      <%= f.text_area :description, class: 'form-control', placeholder: true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('.save'), class: 'btn btn-primary' %>
    <%= t('.or') %> <%= link_to t('.back'), :back %>
  </div>
<% end %>
