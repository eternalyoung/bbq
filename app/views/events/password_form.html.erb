<h1><%= t('.title') %></h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group mb-3">
    <div class="input-group">
      <div class="input-group-text">
        <i class="fa fa-lock"></i>
      </div>
      <%= text_field_tag :pincode, params[:pincode], class: 'form-control', placeholder: t('activerecord.attributes.event.pincode') %>
    </div>
  </div>
  <div class="actions">
    <%= submit_tag t('.save'), class: 'btn btn-primary' %>
    <%= t('.or') %> <%= link_to t('.back'), :back %>
  </div>
<% end %>

